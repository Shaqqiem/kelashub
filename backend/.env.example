# Database
DATABASE_URL=postgresql://kelashub:kelashub@db:5432/kelashub

# Auth
JWT_SECRET=change_this_super_secret_key
TOKEN_TTL_SECONDS=86400
QR_TTL_SECONDS=120

# Files
FILE_STORAGE_ROOT=/files
MAX_FILE_SIZE_MB=20
ALLOWED_MIME=application/pdf,image/png,image/jpeg,application/zip

# CORS (comma-separated exact origins)
CORS_ORIGINS=https://<username>.github.io

# Push (VAPID)
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_SUBJECT=mailto:admin@kelashub.my

# Reminders
ENABLE_REMINDERS=1
REMINDER_WINDOW_MINUTES=10
REMINDER_POLL_SECONDS=60

# SMTP (optional, for future notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM="KelasHub <noreply@kelashub.my>"

